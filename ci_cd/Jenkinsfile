pipeline {
    agent any

    stages {
        stage('Github') {
            env.GIT_BRANCH
            when { 
                anyOf { 
                    env.GIT_BRANCH == 'main'
                    env.GIT_BRANCH == 'develop' 
                } 
            }
            steps {
                git branch: env.GIT_BRANCH, 
                url: 'https://github.com/EARLYBUDDY-TEAM/EB-Server.git'
            }
            steps {
                dir('api') {
                    sh 'sudo docker compose up -d'
                }
            }
        }
    }
}
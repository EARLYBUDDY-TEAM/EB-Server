pipeline {
    agent any

    stages {
        stage('Github') {
            when { 
                anyOf { 
                    // expression { env.GIT_BRANCH == 'origin/main' }
                    // expression { env.GIT_BRANCH == 'origin/develop' }
                    branch 'origin/main'
                    branch 'origin/develop'
                } 
            }
            steps {
                git branch: env.GIT_BRANCH, url: 'https://github.com/EARLYBUDDY-TEAM/EB-Server.git'
            }
        }
        stage('main 브랜치 배포') {
            when { branch 'origin/main' }
            steps {
                dir('api') {
                    sh 'sudo docker compose up -d'
                }
            }
        }
        stage('develop 브랜치 배포') {
            when { branch 'origin/develop' }
            steps {
                dir('api') {
                    sh 'sudo docker compose up -d'
                }
            }
        }
    }
}
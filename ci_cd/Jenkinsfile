pipeline {
    agent any

    stages {
        stage('Github') {
            when { 
                anyOf { 
                    branch { 'main' }
                    branch { 'develop' }
                } 
            }
            steps {
                git branch: env.GIT_BRANCH, url: 'https://github.com/EARLYBUDDY-TEAM/EB-Server.git'
            }
        }
        stage('main 브랜치 배포') {
            when { branch { 'main ' } }
            steps {
                dir('api') {
                    sh 'sudo docker compose up -d'
                }
            }
        }
        stage('develop 브랜치 배포') {
            when { branch { 'develop' } }
            steps {
                dir('api') {
                    sh 'sudo docker compose up -d'
                }
            }
        }
    }
}
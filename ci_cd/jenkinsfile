pipeline {
    agent any

    stages {
        stage('clone main') {
            when { expression { env.GIT_BRANCH == 'origin/main' } } 
            steps {
                git branch: 'main', url: 'https://github.com/EARLYBUDDY-TEAM/EB-Server.git'
            }
        }
        stage('publish main') {
            when { expression { env.GIT_BRANCH == 'origin/main' } }
            steps {
                dir('api') {
                    sh 'sudo docker stop eb_fast_api || true'
                    sh 'sudo docker compose -f docker-compose.yml up -d'
                }
            }
        }
    }

    stages {
        stage('clone develop') {
            when { expression { env.GIT_BRANCH == 'origin/develop' } } 
            steps {
                git branch: 'develop', url: 'https://github.com/EARLYBUDDY-TEAM/EB-Server.git'
            }
        }
        stage('publish develop') {
            when { expression { env.GIT_BRANCH == 'origin/main' } }
            steps {
                dir('api') {
                    sh 'sudo docker stop eb_fast_api || true'
                    sh 'sudo docker compose -f docker-compose.yml up -d'
                }
            }
        }
    }
}